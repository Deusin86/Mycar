<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.Listar_Revicoes">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


        </RelativeLayout>


        <TextView
            android:id="@+id/intro_matricula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Introduza a matricula"
            android:textSize="25dp"
            android:textColor="#000"
            android:layout_centerInParent="true"
            />

        <EditText
            android:id="@+id/pesquisa_revisoes"
            android:layout_below="@+id/intro_matricula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="00-BB-00"
            />


        <Button
            android:id="@+id/ver_revisoes"
            android:layout_below="@+id/pesquisa_revisoes"
            android:text="Listar ! "
            android:textColor="#ffffff"
            android:textSize="17sp"
            android:textStyle="bold"

            android:layout_width="270dp"
            android:layout_height="40dp"
            android:background="@drawable/butao"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:layout_centerInParent="true"


            />



    </RelativeLayout>

</FrameLayout>