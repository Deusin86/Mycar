<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/fundoprincipal" />

    <TextView
        android:id="@+id/texto1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bem-Vindo á aplicação My Car"
        android:textColor="#000"
        android:textSize="23dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="50dp"
        />

    <TextView
        android:layout_below="@+id/texto1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="O seu carro á distancia de um click "
        android:textColor="#000"
        android:textSize="14dp"
        android:layout_centerInParent="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:padding="10dp">


            <Button
                android:id="@+id/main_login"
                android:layout_weight="1"

                android:text="Login "
                android:textColor="#ffffff"
                android:textSize="17sp"
                android:textStyle="bold"

                android:layout_width="270dp"
                android:layout_height="40dp"
                android:background="@drawable/butao"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:layout_centerInParent="true"


                />


            <Button
                android:id="@+id/main_registar"
                android:layout_weight="1"
                android:text="Registar "
                android:textColor="#ffffff"
                android:textSize="17sp"
                android:textStyle="bold"

                android:layout_width="270dp"
                android:layout_height="40dp"
                android:background="@drawable/butao"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:layout_centerInParent="true"


                />




    </LinearLayout>

</RelativeLayout>